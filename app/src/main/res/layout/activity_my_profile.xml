                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="40dp"
                android:paddingBottom="30dp"
                android:elevation="10dp"
                android:ems="10"
                app:cardCornerRadius="30dp"
                android:background="@drawable/register_driver_edittext"
                app:layout_constraintTop_toBottomOf="@+id/horizantalDevider_EditPage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/myScoreTitle_EditPage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monthly Score"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#AE0505"
                        android:textAlignment="center"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <View
                        android:id="@+id/horizantalInScore1_EditPage"
                        style="@style/Divider"
                        android:layout_marginTop="30dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/myScoreTitle_EditPage" />


                    <TextView
                        android:id="@+id/orderTaken_EditPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="Orders Taken"
                        android:layout_marginTop="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/horizantalInScore1_EditPage" />

                    <TextView
                        android:id="@+id/orderTakenValue_EditPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="2"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintLeft_toRightOf="@+id/orderTaken_EditPage"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/orderTaken_EditPage" />


                    <View
                        android:id="@+id/horizantalInScore2_EditPage"
                        style="@style/Divider"
                        android:layout_marginTop="20dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/orderTaken_EditPage"/>

                    <TextView
                        android:id="@+id/orderMissed_EditPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="Orders Missed"
                        android:layout_marginTop="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/horizantalInScore2_EditPage" />

                    <TextView
                        android:id="@+id/orderMissedValue_EditPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="0"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintLeft_toRightOf="@+id/orderMissed_EditPage"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/orderMissed_EditPage"/>


                    <View
                        android:id="@+id/horizantalInScore3_EditPage"
                        style="@style/Divider"
                        android:layout_marginTop="20dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/orderMissed_EditPage" />

                    <TextView
                        android:id="@+id/ordersCanceled_EditPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="Orders Canceled"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/horizantalInScore3_EditPage" />

                    <TextView
                        android:id="@+id/ordersCanceledValue_EditPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="0"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintLeft_toRightOf="@+id/ordersCanceled_EditPage"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ordersCanceled_EditPage"/>

                    <View
                        android:id="@+id/horizantalInScore4_EditPage"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ordersCanceled_EditPage" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>





