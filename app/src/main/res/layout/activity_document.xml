<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Document">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/back_float_btn"
            android:elevation="10dp"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/document_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Document"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/textView2" />

        <EditText
            android:id="@+id/upload_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/register_driver_edittext"
            android:cursorVisible="false"
            android:drawableRight="@drawable/upgrade_24"
            android:elevation="8dp"
            android:hint="Driver Image *"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/document_caption" />

        <EditText
            android:id="@+id/upload_document"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/register_driver_edittext"
            android:cursorVisible="false"
            android:drawableRight="@drawable/upgrade_24"
            android:elevation="8dp"
            android:hint="Driver License *"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/upload_image"
            app:layout_constraintStart_toStartOf="@+id/upload_image"
            app:layout_constraintTop_toBottomOf="@id/upload_image" />

        <EditText
            android:id="@+id/driver_permit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/register_driver_edittext"
            android:cursorVisible="false"
            android:drawableRight="@drawable/upgrade_24"
            android:elevation="8dp"
            android:hint="Driver's Moto Permit *"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/upload_document"
            app:layout_constraintStart_toStartOf="@+id/upload_document"
            app:layout_constraintTop_toBottomOf="@+id/upload_document" />

        <EditText
            android:id="@+id/driver_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/register_driver_edittext"
            android:cursorVisible="false"
            android:drawableRight="@drawable/upgrade_24"
            android:elevation="8dp"
            android:hint="Personal ID *"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/driver_permit"
            app:layout_constraintStart_toStartOf="@+id/driver_permit"
            app:layout_constraintTop_toBottomOf="@+id/driver_permit" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/verify_text_wrapper"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/call_support"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,20:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/driver_id"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.26999998" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>